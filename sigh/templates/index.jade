{% extends "_base.jade" %}

{% block style %}
link(rel="stylesheet", type="text/css", href=url_for('static', filename='css/index.css'))
{% endblock %}

{% block main %}
{% for sigh in sighs_pagination.items %}
.sigh
  p {{ sigh.content }}
  div
    a.btn(href="", role="button", data-toggle="modal", data-target="#comment") Comment »
    #comment.modal.fade(role="dialog", aria-labelledby="myModalLabel", aria-hidden="true")
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-hidden="true") ×
            h4.modal-title
              | Modal title
          .modal-body
            | ...
          .modal-footer
            button.btn.btn-default(type="button", data-dismiss="modal") Close
            button.btn.btn-primary(type="button") Save changes
  .tags
    {% for tag in sigh.tags %}
    span.label.label-default {{ tag.display_name }}
    {% endfor %}

hr
{% endfor %}


ul.pagination
  {% if sighs_pagination.has_prev %}
  li
    a(href=url_for('frontend.index', page_num=sighs_pagination.prev_num)) &laquo;
  {% endif %}

  {% for page in sighs_pagination.iter_pages() %}
  {% if page == sighs_pagination.page %}
  li.active
    a.active(href="#") {{ page }}
  {% else %}
  li
    a(href=url_for('frontend.index', page_num=page)) {{ page }}
  {% endif %}
  {% endfor %}

  {% if sighs_pagination.has_next %}
  li
    a(href=url_for('frontend.index', page_num=sighs_pagination.next_num)) &raquo;
  {% endif %}


{% endblock %}

